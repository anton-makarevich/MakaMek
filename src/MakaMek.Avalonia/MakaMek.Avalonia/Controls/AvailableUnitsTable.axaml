<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wrappers="clr-namespace:Sanet.MakaMek.Presentation.ViewModels.Wrappers;assembly=Sanet.MakaMek.Presentation"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="Sanet.MakaMek.Avalonia.Controls.AvailableUnitsTable"
             x:DataType="wrappers:PlayerViewModel">
    
    <Border Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource PrimaryBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="10">
        <Grid RowDefinitions="Auto,Auto,*,Auto">
            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Available Units"
                       Classes="h3"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <!-- Filter Controls -->
            <Grid Grid.Row="1" 
                  ColumnDefinitions="Auto,*"
                  Margin="0,0,0,10">
                <TextBlock Grid.Column="0" 
                           Text="Class:" 
                           Classes="label"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding WeightClassFilters}"
                          SelectedItem="{Binding SelectedWeightClassFilter, Mode=TwoWay}"
                          HorizontalAlignment="Stretch">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Classes="body"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
            
            <!-- Units Table -->
            <Border Grid.Row="2"
                    BorderBrush="{DynamicResource PrimaryBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <DataGrid ItemsSource="{Binding FilteredAvailableUnits}"
                              SelectedItem="{Binding SelectedUnit, Mode=TwoWay}"
                              IsReadOnly="True"
                              GridLinesVisibility="All"
                              BorderThickness="0"
                              CanUserReorderColumns="False"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True"
                              SelectionMode="Single"
                              AutoGenerateColumns="False"
                              DoubleTapped="OnDataGridDoubleTapped">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Chassis"
                                                Binding="{Binding Chassis}"
                                                Width="*"
                                                MinWidth="150"/>
                            <DataGridTextColumn Header="Model"
                                                Binding="{Binding Model}"
                                                Width="*"
                                                MinWidth="150"/>
                            <DataGridTextColumn Header="Tonnage"
                                                Binding="{Binding Mass}"
                                                Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Border>

            <!-- Add Unit Button -->
            <Button Grid.Row="3"
                    Content="Add Unit"
                    Command="{Binding AddUnitCommand}"
                    IsEnabled="{Binding CanAddUnit}"
                    Classes="primary"
                    HorizontalAlignment="Stretch"
                    Margin="0,10,0,0"/>
        </Grid>
    </Border>
</UserControl>

