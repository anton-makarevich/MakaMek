<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Primary Colors - Military Green (from mech body) -->
    <Color x:Key="PrimaryColor">#6B8E23</Color>
    <Color x:Key="PrimaryLightColor">#8FA557</Color>
    <Color x:Key="PrimaryDarkColor">#556B2F</Color>

    <!-- Secondary Colors - Tactical Blue (from cockpit canopy) -->
    <Color x:Key="SecondaryColor">#2196F3</Color>
    <Color x:Key="SecondaryLightColor">#4FC3F7</Color>
    <Color x:Key="SecondaryDarkColor">#1976D2</Color>

    <!-- Accent Colors - Purple (from sensor) -->
    <Color x:Key="AccentColor">#7E57C2</Color>
    <Color x:Key="AccentLightColor">#9575CD</Color>
    <Color x:Key="AccentDarkColor">#5E35B1</Color>

    <!-- Highlight Colors - Gold/Yellow (from lights) -->
    <Color x:Key="HighlightColor">#FFC107</Color>
    <Color x:Key="HighlightLightColor">#FFD54F</Color>
    <Color x:Key="HighlightDarkColor">#FFA000</Color>

    <!-- Neutral Colors -->
    <Color x:Key="BackgroundColor">#E0E0E0</Color>
    <Color x:Key="SurfaceColor">#3A3A3A</Color>
    <Color x:Key="SurfaceLightColor">#5A5A5A</Color>
    <Color x:Key="TextColor">#333333</Color>
    <Color x:Key="TextLightColor">#CCCCCC</Color>
    <Color x:Key="BorderColor">#4A4A4A</Color>

    <!-- Semantic Colors -->
    <Color x:Key="SuccessColor">#6B8E23</Color>
    <Color x:Key="WarningColor">#FFC107</Color>
    <Color x:Key="ErrorColor">#D32F2F</Color>
    <Color x:Key="InfoColor">#2196F3</Color>

    <!-- Game-Specific Colors -->
    <Color x:Key="MechArmorColor">#4FC3F7</Color>
    <Color x:Key="MechStructureColor">#FFD54F</Color>
    <Color x:Key="HeatColor">#D32F2F</Color>
    <Color x:Key="DestroyedColor">#80D32F2F</Color>
    <Color x:Key="DamagedColor">#80FFC107</Color>

    <!-- Overlay Colors -->
    <Color x:Key="OverlayBackgroundColor">#E0E0E0</Color>
    <Color x:Key="OverlayTransparentColor">#CCE0E0E0</Color>
    <Color x:Key="TargetingColor">#D32F2F</Color>
    <Color x:Key="MovementColor">#4FC3F7</Color>

    <!-- Shadow Colors -->
    <Color x:Key="ShadowLightColor">#20000000</Color>
    <Color x:Key="ShadowMediumColor">#40000000</Color>
    <Color x:Key="ShadowDarkColor">#80000000</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDarkColor}"/>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}"/>

    <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource HighlightColor}"/>
    <SolidColorBrush x:Key="HighlightLightBrush" Color="{StaticResource HighlightLightColor}"/>
    <SolidColorBrush x:Key="HighlightDarkBrush" Color="{StaticResource HighlightDarkColor}"/>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SurfaceLightBrush" Color="{StaticResource SurfaceLightColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource TextLightColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    
    <SolidColorBrush x:Key="MechArmorBrush" Color="{StaticResource MechArmorColor}"/>
    <SolidColorBrush x:Key="MechStructureBrush" Color="{StaticResource MechStructureColor}"/>
    <SolidColorBrush x:Key="HeatBrush" Color="{StaticResource HeatColor}"/>
    <SolidColorBrush x:Key="DestroyedBrush" Color="{StaticResource DestroyedColor}"/>
    <SolidColorBrush x:Key="DamagedBrush" Color="{StaticResource DamagedColor}"/>
    
    <SolidColorBrush x:Key="OverlayBackgroundBrush" Color="{StaticResource OverlayBackgroundColor}"/>
    <SolidColorBrush x:Key="OverlayTransparentBrush" Color="{StaticResource OverlayTransparentColor}"/>
    <SolidColorBrush x:Key="TargetingBrush" Color="{StaticResource TargetingColor}"/>
    <SolidColorBrush x:Key="MovementBrush" Color="{StaticResource MovementColor}"/>
</ResourceDictionary>

