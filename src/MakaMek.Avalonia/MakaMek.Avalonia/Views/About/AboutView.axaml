<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Sanet.MakaMek.Presentation.ViewModels;assembly=Sanet.MakaMek.Presentation"
             xmlns:templatedControls="clr-namespace:Sanet.MakaMek.Avalonia.Views.TemplatedControls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:DataType="viewModels:AboutViewModel"
             x:Class="Sanet.MakaMek.Avalonia.Views.About.AboutView">

    <Grid Margin="10" RowDefinitions="Auto,*">
        <!-- Toolbar with Back Button -->
        <templatedControls:ToolBar
            Title="About MakaMek"
            TitleAlignment="Center"
            LeftCommand="{Binding BackCommand}"
            LeftIcon="{StaticResource BackArrowIcon}"/>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" Margin="0,10,0,0">
            <StackPanel Spacing="20" MaxWidth="800" HorizontalAlignment="Center">
                
                <!-- Version -->
                <TextBlock Text="{Binding Version}"
                           Classes="h2"
                           HorizontalAlignment="Center"/>

                <!-- Game Description -->
                <Border Classes="card">
                    <StackPanel Spacing="10">
                        <TextBlock Text="About the Game"
                                   Classes="h3"/>
                        <TextBlock Text="{Binding GameDescription}"
                                   TextWrapping="Wrap"
                                   Classes="body"/>
                    </StackPanel>
                </Border>

                <!-- GitHub Link -->
                <Border Classes="card">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Source Code"
                                   Classes="h3"/>
                        <Button Content="Visit GitHub Repository"
                                Command="{Binding OpenGitHubCommand}"
                                Classes="primary"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- MegaMek Attribution -->
                <Border Classes="card">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Assets Attribution"
                                   Classes="h3"/>
                        <TextBlock Text="{Binding MegaMekAttribution}"
                                   TextWrapping="Wrap"
                                   Classes="body"/>
                        <Button Content="Visit MegaMek Website"
                                Command="{Binding OpenMegaMekCommand}"
                                Classes="primary"
                                HorizontalAlignment="Left"/>
                        <TextBlock Text="{Binding ContactStatement}"
                                                           TextWrapping="Wrap"
                                                           Classes="body"/>
                    </StackPanel>
                </Border>
                
                <!-- Free and Open Source Statement -->
                <Border Classes="card">
                    <StackPanel Spacing="10">
                        <TextBlock Text="License"
                                   Classes="h3"/>
                        <TextBlock Text="{Binding FreeAndOpenSourceStatement}"
                                   TextWrapping="Wrap"
                                   Classes="body"/>
                    </StackPanel>
                </Border>

                <!-- Trademark Notices -->
                <Border Classes="card">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Trademark Notices"
                                   Classes="h3"/>
                        <TextBlock Text="{Binding TrademarkNotice1}"
                                   TextWrapping="Wrap"
                                   Classes="body"/>
                        <TextBlock Text="{Binding TrademarkNotice2}"
                                   TextWrapping="Wrap"
                                   Classes="body"/>
                        <TextBlock Text="{Binding GameContentRulesNotice}"
                                   TextWrapping="Wrap"
                                   Classes="body"/>
                        <Button Content="View Game Content Usage Rules"
                                Command="{Binding OpenGameContentRulesCommand}"
                                Classes="primary"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

