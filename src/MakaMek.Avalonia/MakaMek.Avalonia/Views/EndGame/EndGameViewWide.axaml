<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Sanet.MakaMek.Presentation.ViewModels;assembly=Sanet.MakaMek.Presentation"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="Sanet.MakaMek.Avalonia.Views.EndGame.EndGameViewWide"
             x:DataType="viewModels:EndGameViewModel">
    <Grid Classes="pageContainer" RowDefinitions="Auto,Auto,*,Auto">
        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="{Binding TitleText}"
                   Classes="h1"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,10"/>

        <!-- Subtitle -->
        <TextBlock Grid.Row="1"
                   Text="{Binding SubtitleText}"
                   Classes="h3"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Players List -->
        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Players}" Margin="20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Classes="card" Margin="0,0,0,15">
                            <Grid RowDefinitions="Auto,*">
                                <!-- Player Header -->
                                <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="15,15,15,10">
                                    <!-- Color Preview -->
                                    <Border Grid.Column="0"
                                            Width="30"
                                            Height="30"
                                            Classes="card"
                                            Background="{Binding Tint}"
                                            VerticalAlignment="Center"
                                            Margin="0,0,10,0"/>

                                    <!-- Player Name -->
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Name}"
                                               Classes="h2"
                                               VerticalAlignment="Center"/>

                                    <!-- Victory Badge -->
                                    <Border Grid.Column="2"
                                            Classes="card"
                                            Background="#FFD700"
                                            Padding="10,5"
                                            CornerRadius="15"
                                            IsVisible="{Binding IsVictor}"
                                            VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <TextBlock FontFamily="{StaticResource AwesomeFontSolid}"
                                                       Text="&#xf091;"
                                                       Foreground="#000000"
                                                       FontSize="16"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="VICTOR"
                                                       Foreground="#000000"
                                                       FontWeight="Bold"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Units List -->
                                <ItemsControl Grid.Row="1" ItemsSource="{Binding Units}" Margin="15,0,15,15">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Classes="card" Margin="0,5" Padding="10">
                                                <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                                                    <!-- Unit Info -->
                                                    <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="3">
                                                        <TextBlock Text="{Binding Name}"
                                                                   Classes="h4"
                                                                   FontWeight="Bold"/>
                                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                                            <TextBlock Text="{Binding WeightClass}"/>
                                                            <TextBlock Text="-"/>
                                                            <TextBlock Text="{Binding Tonnage}"/>
                                                            <TextBlock Text="tons"/>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding PilotName}"
                                                                   IsVisible="{Binding PilotName, Converter={x:Static ObjectConverters.IsNotNull}}"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    </StackPanel>

                                                    <!-- Pilot Status -->
                                                    <Border Grid.Column="1"
                                                            Classes="statusTag"
                                                            Background="#FF4444"
                                                            IsVisible="{Binding IsPilotDead}"
                                                            Margin="5,0">
                                                        <TextBlock Text="Pilot KIA"/>
                                                    </Border>

                                                    <Border Grid.Column="2"
                                                            Classes="statusTag"
                                                            Background="#FFA500"
                                                            IsVisible="{Binding IsPilotUnconscious}"
                                                            Margin="5,0">
                                                        <TextBlock Text="Pilot Unconscious"/>
                                                    </Border>

                                                    <!-- Unit Status -->
                                                    <Border Grid.Column="3"
                                                            Classes="statusTag"
                                                            Margin="5,0">
                                                        <TextBlock Text="{Binding Status}"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Return to Menu Button -->
        <Button Grid.Row="3"
                Content="Return to Menu"
                Command="{Binding ReturnToMenuCommand}"
                Classes="primary"
                HorizontalAlignment="Center"
                Margin="0,20,0,20"
                MinWidth="200"/>
    </Grid>
</UserControl>

