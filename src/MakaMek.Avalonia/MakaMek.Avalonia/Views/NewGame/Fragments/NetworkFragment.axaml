<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Sanet.MakaMek.Core.ViewModels;assembly=Sanet.MakaMek.Core"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sanet.MakaMek.Avalonia.Views.NewGame.Fragments.NetworkFragment">
    <Design.DataContext>
        <viewModels:NewGameViewModel/>
    </Design.DataContext>
    
    <Border Background="#20FFFFFF" CornerRadius="8" Padding="16" Margin="8">
        <StackPanel Spacing="8">
            <TextBlock Text="Network" FontWeight="Bold" FontSize="18" Margin="0,0,0,8"/>
            
            <Button Content="Start LAN Server" 
                    Command="{Binding StartLanServerCommand}"
                    IsEnabled="{Binding !IsLanServerRunning}"
                    HorizontalAlignment="Left"
                    Padding="12,8"/>
            
            <StackPanel IsVisible="{Binding IsLanServerRunning}" Spacing="4">
                <TextBlock Text="Server is running" Foreground="LightGreen"/>
                <TextBlock Text="Server IP Address:"/>
                <SelectableTextBlock Text="{Binding ServerIpAddress}" 
                                    Padding="8,4" 
                                    Background="#30FFFFFF" 
                                    CornerRadius="4"/>
                <TextBlock Text="Share this address with other players to connect" 
                           FontStyle="Italic" 
                           Opacity="0.7"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
