<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels1="clr-namespace:Sanet.MakaMek.Presentation.ViewModels;assembly=Sanet.MakaMek.Presentation"
             xmlns:wrappers="clr-namespace:Sanet.MakaMek.Presentation.ViewModels.Wrappers;assembly=Sanet.MakaMek.Presentation"
             xmlns:controls="clr-namespace:Sanet.MakaMek.Avalonia.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sanet.MakaMek.Avalonia.Views.StartNewGame.Fragments.PlayersFragment"
             x:DataType="viewModels1:NewGameViewModel">
    <Panel>
        <ScrollViewer>
        <StackPanel Classes="verticalSpaced"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
        <Button Content="Add Player" Command="{Binding AddPlayerCommand}"
                Classes="primary"
                HorizontalAlignment="Center"
                IsEnabled="{Binding CanAddPlayer}"/>
        <ItemsControl
            ItemsSource="{Binding Players}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Classes="card" Margin="0,5">
                        <Grid RowDefinitions="Auto,Auto,Auto,*">
                            <!-- Player Name with Edit Functionality and Delete Button -->
                            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" 
                                  Margin="10,10,10,5">
                                <StackPanel Grid.Column="0"
                                            Orientation="Horizontal"
                                            Spacing="5">
                                    <!-- Color Preview Rectangle -->
                                    <Border Width="20"
                                            Height="20"
                                            Classes = "card"
                                            Background="{Binding Tint}"
                                            />
                                    <TextBlock Text="{Binding Name}"
                                               Classes="h3"
                                               VerticalAlignment="Center"
                                               TextAlignment="Left"
                                               IsVisible="{Binding !IsEditingName}"/>
                                    <TextBox Text="{Binding EditableName, Mode=TwoWay}"
                                             IsVisible="{Binding IsEditingName}"
                                             MinWidth="150"/>
                                    <Button Command="{Binding StartEditingName}"
                                            IsVisible="{Binding !IsEditingName}"
                                            IsEnabled="{Binding CanEditName}"
                                            ToolTip.Tip="Edit player name"
                                            Classes="secondary"
                                            Padding="5,2">
                                        <TextBlock FontFamily="{StaticResource AwesomeFontSolid}" Text="&#xf304;"/>
                                    </Button>
                                    <Button Command="{Binding SaveName}"
                                            IsVisible="{Binding IsEditingName}"
                                            ToolTip.Tip="Save name"
                                            Classes="primary"
                                            Padding="5,2">
                                        <TextBlock FontFamily="{StaticResource AwesomeFontSolid}" Text="&#xf00c;"/>
                                    </Button>
                                    <Button Command="{Binding CancelEditName}"
                                            IsVisible="{Binding IsEditingName}"
                                            ToolTip.Tip="Cancel"
                                            Classes="secondary"
                                            Padding="5,2">
                                        <TextBlock FontFamily="{StaticResource AwesomeFontSolid}" Text="&#xf00d;"/>
                                    </Button>
                                </StackPanel>

                                <!-- Delete Player Button -->
                                <Button Grid.Column="1"
                                        Command="{Binding $parent[UserControl].((viewModels1:NewGameViewModel)DataContext).RemovePlayerCommand}"
                                        CommandParameter="{Binding}"
                                        IsVisible="{Binding IsRemovable}"
                                        ToolTip.Tip="Remove player"
                                        Classes="secondary"
                                        Padding="5,2"
                                        VerticalAlignment="Center">
                                    <TextBlock FontFamily="{StaticResource AwesomeFontSolid}" Text="&#xf2ed;"/>
                                </Button>
                            </Grid>

                            <!-- Assigned Units - Horizontal Scrollable View with + Button -->
                            <Border Grid.Row="1"
                                    MinHeight="150"
                                    Margin="10,5">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                              VerticalScrollBarVisibility="Disabled">
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <!-- Existing Units -->
                                        <ItemsControl ItemsSource="{Binding Units}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" Spacing="5"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <controls:UnitItemControl
                                                        DataContext="{Binding}"
                                                        PlayerTint="{Binding $parent[ItemsControl].((wrappers:PlayerViewModel)DataContext).Tint}"
                                                        RemoveCommand="{Binding $parent[ItemsControl].((wrappers:PlayerViewModel)DataContext).RemoveUnitCommand}"
                                                        RemoveCommandParameter="{Binding Id}"
                                                        IsRemoveButtonVisible="{Binding $parent[ItemsControl].((wrappers:PlayerViewModel)DataContext).CanRemoveUnit}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        
                                        <Border Padding="5"
                                                Width="100"
                                                Height="120"
                                                Classes="card"
                                                IsVisible="{Binding CanAddUnit}">
                                            <StackPanel Spacing="4">
                                                <Button Content="+"
                                                        FontSize="64"
                                                        FontWeight="Bold"
                                                        Height="84"
                                                        Width="84"
                                                        HorizontalContentAlignment="Center"
                                                        VerticalContentAlignment="Center"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Command="{Binding ShowAvailableUnitsCommand}"
                                                        ToolTip.Tip="Add Unit"
                                                        Cursor="Hand">
                                                    <Button.Styles>
                                                        <Style Selector="Button:pointerover">
                                                            <Setter Property="Opacity" Value="0.7"/>
                                                        </Style>
                                                    </Button.Styles>
                                                </Button>
                                                <TextBlock Text="Add Unit" 
                                                           Classes="bodySmall"
                                                           Foreground="{StaticResource TextBrush}"
                                                           TextAlignment="Center"
                                                           TextWrapping="Wrap"
                                                           MaxLines="2"
                                                           HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </Border>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="2"
                                        Orientation="Horizontal"
                                        Spacing="10"
                                        Margin="10,5">
                                <Button Content="Join Game"
                                        Command="{Binding JoinGameCommand}"
                                        Classes="primary"
                                        IsVisible="{Binding CanJoin}"/>
                                <Button Content="Set Ready"
                                        Command="{Binding SetReadyCommand}"
                                        Classes="primary"
                                        IsVisible="{Binding CanSetReady}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel></ScrollViewer>
    </Panel>
</UserControl>

