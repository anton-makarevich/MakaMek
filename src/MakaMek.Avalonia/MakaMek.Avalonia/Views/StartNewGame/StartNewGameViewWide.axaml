<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels1="clr-namespace:Sanet.MakaMek.Presentation.ViewModels;assembly=Sanet.MakaMek.Presentation"
             xmlns:fragments="clr-namespace:Sanet.MakaMek.Avalonia.Views.StartNewGame.Fragments"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sanet.MakaMek.Avalonia.Views.StartNewGame.StartNewGameViewWide"
             x:DataType="viewModels1:StartNewGameViewModel">
    <Grid 
        RowDefinitions="*, Auto">
        <UniformGrid
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Rows="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, 
                        Path=Bounds.Size, 
                        Converter={StaticResource AdaptiveRowsConverter}}"
            Columns="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, 
                        Path=Bounds.Size, 
                        Converter={StaticResource AdaptiveColumnsConverter}}"
            >
            <Grid RowDefinitions="Auto,*">
                <TextBlock Text="Players" Classes="h2" HorizontalAlignment="Center"/>
                <fragments:PlayersFragment Grid.Row="1" Margin="10"/>
            </Grid>
            <Grid RowDefinitions="Auto,*,Auto">      
                <TextBlock Text="Map" Classes="h2" HorizontalAlignment="Center"/>
                <ScrollViewer Grid.Row="1" >
                    <fragments:MapConfigFragment Margin="10"/>
                </ScrollViewer>
                <fragments:NetworkFragment Grid.Row="2" IsVisible="{Binding CanStartLanServer}" Margin="10"/>
            </Grid>
        </UniformGrid>
        <Button Grid.Row="1" Grid.Column="0"
                Command="{Binding StartGameCommand}"
                Content="Start Game"
                Classes="primary"
                IsEnabled="{Binding CanStartGame}"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"/>
    </Grid>

</UserControl>

