<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels1="clr-namespace:Sanet.MakaMek.Presentation.ViewModels;assembly=Sanet.MakaMek.Presentation"
             xmlns:fragments="clr-namespace:Sanet.MakaMek.Avalonia.Views.StartNewGame.Fragments"
             xmlns:converters="clr-namespace:Sanet.MakaMek.Avalonia.Converters;assembly=Sanet.MakaMek.Avalonia"
             xmlns:templatedControls="clr-namespace:Sanet.MakaMek.Avalonia.Views.TemplatedControls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sanet.MakaMek.Avalonia.Views.StartNewGame.StartNewGameViewWide"
             x:DataType="viewModels1:StartNewGameViewModel">
    <Grid 
        Margin="10"
        RowDefinitions="Auto,*, Auto">
        <templatedControls:ToolBar
            Title="Start New Game"
            TitleAlignment="Center"
            LeftCommand="{Binding BackCommand}"
            LeftIcon="M257.5 445.1l-22.2 22.2c-9.4 9.4-24.6 9.4-33.9 0L7 273c-9.4-9.4-9.4-24.6 0-33.9L201.4 44.7c9.4-9.4 24.6-9.4 33.9 0l22.2 22.2c9.5 9.5 9.3 25-.4 34.3L136.6 216H424c13.3 0 24 10.7 24 24v32c0 13.3-10.7 24-24 24H136.6l120.5 114.8c9.8 9.3 10 24.8.4 34.3z"/>
        <UniformGrid Grid.Row="1"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Rows="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, 
                        Path=Bounds.Size, 
                        Converter={StaticResource AdaptiveGridConverter}, 
                        ConverterParameter={x:Static converters:GridOrientation.Rows}}"
            Columns="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, 
                        Path=Bounds.Size, 
                        Converter={StaticResource AdaptiveGridConverter}, 
                        ConverterParameter={x:Static converters:GridOrientation.Columns}}"
        >
            <Grid RowDefinitions="Auto,*">
                <TextBlock Text="Players" Classes="h2" HorizontalAlignment="Center"/>
                <fragments:PlayersFragment Grid.Row="1" Margin="10"/>
            </Grid>
            <Grid RowDefinitions="Auto,*,Auto">      
                <TextBlock Text="Map" Classes="h2" HorizontalAlignment="Center"/>
                <ScrollViewer Grid.Row="1" >
                    <fragments:MapConfigFragment Margin="10" DataContext="{Binding MapConfig}"/>
                </ScrollViewer>
                <fragments:NetworkFragment Grid.Row="2" IsVisible="{Binding CanStartLanServer}" Margin="10"/>
            </Grid>
        </UniformGrid>
        <Button Grid.Row="2" Grid.Column="0"
                Command="{Binding StartGameCommand}"
                Content="Start Game"
                Classes="primary"
                IsEnabled="{Binding CanStartGame}"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"/>
    </Grid>

</UserControl>