<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Sanet.MekForge.Core.ViewModels;assembly=Sanet.MekForge.Core"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:behaviors="using:Sanet.MekForge.Avalonia.Behaviors"
             xmlns:controls="clr-namespace:Sanet.MekForge.Avalonia.Controls"
             xmlns:templatedControls="clr-namespace:Sanet.MekForge.Avalonia.Views.TemplatedControls"
             xmlns:converters="clr-namespace:Sanet.MekForge.Avalonia.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sanet.MekForge.Avalonia.Views.BattleMapView"
             x:CompileBindings="True"
             x:DataType="viewModels:BattleMapViewModel">
    <UserControl.Resources>
        <converters:HexColorToBrushConverter x:Key="HexColorToBrushConverter"/>
        <converters:ContrastingForegroundConverter x:Key="ContrastingForegroundConverter"/>
        <converters:TorsoPropertyConverter x:Key="TorsoPropertyConverter"/>
    </UserControl.Resources>
    <Grid>
        <Canvas x:Name="MapCanvas" 
                Background="Transparent">
            <controls:DirectionSelector
                x:Name="DirectionSelector"
                IsVisible="{Binding IsDirectionSelectorVisible}"
                EnabledDirections="{Binding AvailableDirections}"
                Position="{Binding DirectionSelectorPosition}"
                DirectionSelectedCommand="{Binding DirectionSelectedCommand}"
                Foreground="{Binding ActivePlayerTint}"/>
        </Canvas>
        
        <StackPanel x:Name="TurnStatus"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="Aqua">
            <Label Content="{Binding Turn}"/>
            <Label Content="{Binding TurnPhaseNames}"/>
            <Label Content="{Binding ActivePlayerName}"/>
        </StackPanel>
        
        <Grid x:Name="MechList"
              Background="Aqua"
              IsVisible="{Binding AreUnitsToDeployVisible}"
              Grid.RowDefinitions="Auto,*"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Label Content="Select a Unit to deploy"/>
            <ListBox Grid.Row="1"
                ItemsSource="{Binding UnitsToDeploy}"
                SelectedItem="{Binding SelectedUnit}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        
        <StackPanel x:Name="PlayerAction"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Background="Aqua"
                    IsVisible="{Binding IsUserActionLabelVisible}">
            <Label Content="{Binding UserActionLabel}"/>
        </StackPanel>
        
        <!-- Buttons Stack -->
        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="10"
                    Spacing="10">
            <!-- Record Sheet Button -->
            <templatedControls:ActionButton
                IsVisible="{Binding IsRecordSheetButtonVisible}"
                Command="{Binding ToggleRecordSheet}"
                Background="Aqua"
                IconData="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6zm-1 1v5h5v10H6V3h7z"/>

            <!-- Command Log Button -->
            <templatedControls:ActionButton
                IsVisible="{Binding !IsCommandLogExpanded}"
                Command="{Binding ToggleCommandLog}"
                Background="Aqua"
                IconData="M8 14v-4m4 4v-4m4 4v-4M3 21h18V7H3v14zM3 7V5a2 2 0 012-2h14a2 2 0 012 2v2H3z"/>
        </StackPanel>

        <!-- Record Sheet Panel -->
        <templatedControls:GamePanel
            IsVisible="{Binding IsRecordSheetPanelVisible}"
            Title="{Binding SelectedUnit.Name}"
            CloseCommand="{Binding ToggleRecordSheet}">
            <TabControl>
                <TabItem Header="Info">
                    <StackPanel Margin="10">
                        <!-- Basic Info -->
                        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,10">
                            <TextBlock Text="{Binding SelectedUnit.Class}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SelectedUnit.Tonnage}" VerticalAlignment="Center"/>
                            <TextBlock Text="T" VerticalAlignment="Center"/>
                            <Border Background="{Binding ActivePlayerTint, Converter={StaticResource HexColorToBrushConverter}}"
                                    VerticalAlignment="Center"
                                    CornerRadius="4"
                                    BorderBrush="{Binding ActivePlayerTint, Converter={StaticResource ContrastingForegroundConverter}}"
                                    BorderThickness="1"
                                    Padding="5,2">
                                <TextBlock Text="{Binding SelectedUnit.Status}"
                                         Foreground="{Binding ActivePlayerTint, Converter={StaticResource ContrastingForegroundConverter}}"/>
                            </Border>
                        </StackPanel>

                        <!-- Heat Level -->
                        <TextBlock Text="Heat Level" Margin="0,0,0,5"/>
                        <Grid Height="20" Margin="0,0,0,10">
                            <ProgressBar Value="{Binding SelectedUnit.CurrentHeat}" 
                                       Maximum="30"
                                       Height="20">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                                        <GradientStop Offset="0" Color="#ADD8E6"/>
                                        <GradientStop Offset="0.5" Color="#FFA500"/>
                                        <GradientStop Offset="1" Color="#8B0000"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                            <TextBlock Text="{Binding SelectedUnit.CurrentHeat}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Movement Info -->
                        <Border Background="#20000000" 
                                CornerRadius="4" 
                                Padding="10" 
                                IsVisible="{Binding SelectedUnit.HasMoved}">
                            <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                         Text="Type" 
                                         HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                         Text="Points" 
                                         HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" 
                                         Text="Distance" 
                                         HorizontalAlignment="Center"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                         Text="{Binding SelectedUnit.MovementTypeUsed}"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                         Text="{Binding SelectedUnit.MovementPointsSpent}"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" 
                                         Text="{Binding SelectedUnit.DistanceCovered}"
                                         HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Armor">
                    <ScrollViewer>
                        <Grid Margin="10" RowDefinitions="Auto,*,*" ColumnDefinitions="*,*,*,*">
                            <!-- Head -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="5">
                                <TextBlock Text="Head" HorizontalAlignment="Center"/>
                                <Grid ColumnDefinitions="*,*" Margin="0,5">
                                    <StackPanel Grid.Column="0" Margin="2">
                                        <TextBlock Text="A" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="60"
                                                   Value="{Binding SelectedUnit.Parts[0].CurrentArmor}"
                                                   Maximum="{Binding SelectedUnit.Parts[0].MaxArmor}"
                                                   Foreground="LightBlue"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[0].CurrentArmor}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="2">
                                        <TextBlock Text="S" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="60"
                                                   Value="{Binding SelectedUnit.Parts[0].CurrentStructure}"
                                                   Maximum="{Binding SelectedUnit.Parts[0].MaxStructure}"
                                                   Foreground="Orange"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[0].CurrentStructure}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- Arms -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                                <TextBlock Text="Left Arm" HorizontalAlignment="Center"/>
                                <Grid ColumnDefinitions="*,*" Margin="0,5">
                                    <StackPanel Grid.Column="0" Margin="2">
                                        <TextBlock Text="A" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[4].CurrentArmor}"
                                                   Maximum="{Binding SelectedUnit.Parts[4].MaxArmor}"
                                                   Foreground="LightBlue"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[4].CurrentArmor}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="2">
                                        <TextBlock Text="S" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[4].CurrentStructure}"
                                                   Maximum="{Binding SelectedUnit.Parts[4].MaxStructure}"
                                                   Foreground="Orange"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[4].CurrentStructure}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="3" Margin="5">
                                <TextBlock Text="Right Arm" HorizontalAlignment="Center"/>
                                <Grid ColumnDefinitions="*,*" Margin="0,5">
                                    <StackPanel Grid.Column="0" Margin="2">
                                        <TextBlock Text="A" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[5].CurrentArmor}"
                                                   Maximum="{Binding SelectedUnit.Parts[5].MaxArmor}"
                                                   Foreground="LightBlue"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[5].CurrentArmor}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="2">
                                        <TextBlock Text="S" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[5].CurrentStructure}"
                                                   Maximum="{Binding SelectedUnit.Parts[5].MaxStructure}"
                                                   Foreground="Orange"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[5].CurrentStructure}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- Torso -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                                <TextBlock Text="Left Torso" HorizontalAlignment="Center"/>
                                <Grid ColumnDefinitions="*,*,*" Margin="0,5">
                                    <StackPanel Grid.Column="0" Margin="2">
                                        <TextBlock Text="FA" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[2].CurrentArmor}"
                                                   Maximum="{Binding SelectedUnit.Parts[2].MaxArmor}"
                                                   Foreground="LightBlue"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[2].CurrentArmor}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="2">
                                        <TextBlock Text="S" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[2].CurrentStructure}"
                                                   Maximum="{Binding SelectedUnit.Parts[2].MaxStructure}"
                                                   Foreground="Orange"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[2].CurrentStructure}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Margin="2">
                                        <TextBlock Text="RA" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[2], Converter={StaticResource TorsoPropertyConverter}, ConverterParameter=CurrentRearArmor}"
                                                   Maximum="{Binding SelectedUnit.Parts[2], Converter={StaticResource TorsoPropertyConverter}, ConverterParameter=MaxRearArmor}"
                                                   Foreground="LightBlue"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[2], Converter={StaticResource TorsoPropertyConverter}, ConverterParameter=CurrentRearArmor}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="5">
                                <TextBlock Text="Right Torso" HorizontalAlignment="Center"/>
                                <Grid ColumnDefinitions="*,*,*" Margin="0,5">
                                    <StackPanel Grid.Column="0" Margin="2">
                                        <TextBlock Text="FA" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[3].CurrentArmor}"
                                                   Maximum="{Binding SelectedUnit.Parts[3].MaxArmor}"
                                                   Foreground="LightBlue"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[3].CurrentArmor}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="2">
                                        <TextBlock Text="S" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[3].CurrentStructure}"
                                                   Maximum="{Binding SelectedUnit.Parts[3].MaxStructure}"
                                                   Foreground="Orange"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[3].CurrentStructure}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Margin="2">
                                        <TextBlock Text="RA" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[3], Converter={StaticResource TorsoPropertyConverter}, ConverterParameter=CurrentRearArmor}"
                                                   Maximum="{Binding SelectedUnit.Parts[3], Converter={StaticResource TorsoPropertyConverter}, ConverterParameter=MaxRearArmor}"
                                                   Foreground="LightBlue"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[3], Converter={StaticResource TorsoPropertyConverter}, ConverterParameter=CurrentRearArmor}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- Center Torso -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="5,120,5,5">
                                <TextBlock Text="Center Torso" HorizontalAlignment="Center"/>
                                <Grid ColumnDefinitions="*,*,*" Margin="0,5">
                                    <StackPanel Grid.Column="0" Margin="2">
                                        <TextBlock Text="FA" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[1].CurrentArmor}"
                                                   Maximum="{Binding SelectedUnit.Parts[1].MaxArmor}"
                                                   Foreground="LightBlue"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[1].CurrentArmor}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="2">
                                        <TextBlock Text="S" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[1].CurrentStructure}"
                                                   Maximum="{Binding SelectedUnit.Parts[1].MaxStructure}"
                                                   Foreground="Orange"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[1].CurrentStructure}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Margin="2">
                                        <TextBlock Text="RA" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[1], Converter={StaticResource TorsoPropertyConverter}, ConverterParameter=CurrentRearArmor}"
                                                   Maximum="{Binding SelectedUnit.Parts[1], Converter={StaticResource TorsoPropertyConverter}, ConverterParameter=MaxRearArmor}"
                                                   Foreground="LightBlue"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[1], Converter={StaticResource TorsoPropertyConverter}, ConverterParameter=CurrentRearArmor}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- Legs -->
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="5">
                                <TextBlock Text="Left Leg" HorizontalAlignment="Center"/>
                                <Grid ColumnDefinitions="*,*" Margin="0,5">
                                    <StackPanel Grid.Column="0" Margin="2">
                                        <TextBlock Text="A" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[6].CurrentArmor}"
                                                   Maximum="{Binding SelectedUnit.Parts[6].MaxArmor}"
                                                   Foreground="LightBlue"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[6].CurrentArmor}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="2">
                                        <TextBlock Text="S" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[6].CurrentStructure}"
                                                   Maximum="{Binding SelectedUnit.Parts[6].MaxStructure}"
                                                   Foreground="Orange"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[6].CurrentStructure}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="5">
                                <TextBlock Text="Right Leg" HorizontalAlignment="Center"/>
                                <Grid ColumnDefinitions="*,*" Margin="0,5">
                                    <StackPanel Grid.Column="0" Margin="2">
                                        <TextBlock Text="A" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[7].CurrentArmor}"
                                                   Maximum="{Binding SelectedUnit.Parts[7].MaxArmor}"
                                                   Foreground="LightBlue"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[7].CurrentArmor}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="2">
                                        <TextBlock Text="S" HorizontalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Orientation="Vertical" 
                                                   Height="100"
                                                   Value="{Binding SelectedUnit.Parts[7].CurrentStructure}"
                                                   Maximum="{Binding SelectedUnit.Parts[7].MaxStructure}"
                                                   Foreground="Orange"/>
                                        <TextBlock Text="{Binding SelectedUnit.Parts[7].CurrentStructure}" 
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Weapons">
                    <!-- Weapons content will be added later -->
                </TabItem>
            </TabControl>
        </templatedControls:GamePanel>

        <!-- Command Log Panel -->
        <templatedControls:GamePanel
            IsVisible="{Binding IsCommandLogExpanded}"
            Title="Command Log"
            CloseCommand="{Binding ToggleCommandLog}">
            <ScrollViewer Grid.Row="1" 
                          MaxHeight="360">
                <i:Interaction.Behaviors>
                    <behaviors:AutoScrollBehavior />
                </i:Interaction.Behaviors>
                <ItemsControl ItemsSource="{Binding CommandLog}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                       Foreground="Black"
                                       Margin="5"
                                       TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </templatedControls:GamePanel>
    </Grid>
</UserControl>
